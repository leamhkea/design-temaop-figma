---
import Slogan from "./Slogan.astro";
import Phone from "../icons/phone.svg";
import Pin from "../icons/pin.svg";
import Clock from "../icons/clock.svg";
---

<div class="container_all">
  <div class="container_text">
    <Slogan slogan="slogan_yellow">PROCESS</Slogan>

    <h2>Contact Us. It's Easy.</h2>
    <p>
      Leverage agile frameworks to provide a robust synopsis for high level
      overviews. Iterative approaches to corporate strategy foster
      collaborative.
    </p>

    <div class="svg_flex_section">
      <div class="svg_flex_group">
        <img src="/figmaicon/phone.svg" alt="phone" class="svg_phone" />
        <div class="svg_flex_text">
          <h4>+1 800 100 900</h4>
          <p>Call Today</p>
        </div>
      </div>
      <div class="svg_flex_group">
        <img src="/figmaicon/clock.svg" alt="clock" class="svg_clock" />
        <div class="svg_flex_text">
          <h4>9AM - 5PM</h4>
          <p>Monday To Friday</p>
        </div>
      </div>
      <div class="svg_flex_group">
        <img src="/figmaicon/map.svg" alt="map" class="svg_map" />
        <div class="svg_flex_text">
          <h4>195 Devonshire St Boston, MA 02110</h4>
          <p>USA Office</p>
        </div>
      </div>
    </div>
  </div>
  <figure class="container_img">
    <img src="/img/contacthands.webp" alt="hands" class="img_hands" />
    <img src="/img/contactlady.webp" alt="lady" class="img_lady" />
    <img src="/img/contactwomen.webp" alt="women" class="img_women" />
  </figure>
</div>

