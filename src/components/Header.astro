---
import Button from "./Button.astro";
---

<header>
  <div class="site_header__inner">
    <h3>AskExperts</h3>
    <nav class="navigation">
      <ul role="list">
        <li class="navigation_item">
          <a class="navigation_link" href="/">Home</a>
        </li>
        <li class="navigation_item">
          <a class="navigation_link" href="/casestudy">Case Study</a>
        </li>
        <li class="navigation_item">
          <a class="navigation_link" href="/team">Team</a>
        </li>
        <li class="navigation_item">
          <a class="navigation_link" href="/about">About</a>
        </li>
      </ul>
    </nav>
    <Button variant="secondary_button">Login</Button>
  </div>
</header>

<style>
  @layer components {
    header {
      background-color: var(--black-background);
      color: var(--white-primary);
    }

    .site_header__inner {
      display: flex;
      flex-wrap: wrap;
      padding-block: 1rem;
      justify-content: space-between;
      align-items: center;
    }

    .navigation {
      ul {
        list-style: none;
        display: flex;
        flex-wrap: wrap;
        gap: 0rem 3rem;
        align-items: center;
      }
    }
  }
</style>
