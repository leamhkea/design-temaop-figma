---
import Button from "./Button.astro";
---

<header>
  <div class="site_header__inner">
    <h3>AskExperts</h3>
    <nav class="navigation">
      <ul role="list">
        <li class="navigation_item">
          <a class="navigation_link" href="/">Home</a>
        </li>
        <li class="navigation_item">
          <a class="navigation_link" href="/casestudy">Case Study</a>
        </li>
        <li class="navigation_item">
          <a class="navigation_link" href="/team">Team</a>
        </li>
        <li class="navigation_item">
          <a class="navigation_link" href="/about">About</a>
        </li>
      </ul>
    </nav>
    <Button popovertarget="popup" variant="secondary_button">Login</Button>

    <div popover id="popup">
      <h2>I'm a popup</h2>

      <input id="Email" placeholder="Email adress" name="Email" type="email" />
      <input
        id="Password"
        placeholder="Password"
        name="Password"
        type="password"
      />
    </div>
  </div>
</header>

<style>
  @layer components {
    header {
      background-color: var(--black-background);
      color: var(--white-primary);
    }

    .site_header__inner {
      display: flex;
      flex-wrap: wrap;
      padding-block: 1rem;
      justify-content: space-between;
      align-items: center;
    }

    .navigation {
      ul {
        list-style: none;
        display: flex;
        flex-wrap: wrap;
        gap: 0rem 3rem;
        align-items: center;
      }
    }

    /*                     POP-UP DESIGN OG STYLING                  */
    ::backdrop {
      background: #0003;
      backdrop-filter: blur(4px);
    }

    [popover] {
      opacity: 0;
      translate: 0 -100%;

      transition: 0.6s;
      transition-property: opacity, display, overlay, translate;
      transition-behavior: allow-discrete;

      &:popover-open {
        opacity: 1;
        translate: 0 0;

        @starting-style {
          opacity: 0;
          translate: 0 100%;
        }
      }
    }
  }
</style>
