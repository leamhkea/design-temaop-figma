---
import Slogan from "./Slogan.astro";
---

<div class="container_all">
  <div class="container_text">
    <Slogan slogan="slogan_green">OUR VISION</Slogan>

    <h2>Turn your ideas into reality.</h2>
    <p>
      Capitalize on low hanging fruit to identify a ballpark value added
      activity beta test. Override the digital divide with additional from
      DevOps.
    </p>

    <ul role="list">
      <li>
        Bring to the table win-win survival strategies to ensure proactive
        domination. At the end of the day.
      </li>
      <li>
        Capitalize on low hanging fruit to identify a ballpark value added
        activity to beta test override the digital.
      </li>
    </ul>
  </div>
  <div class="container_img">
    <figure class="container_img">
      <img src="/img/aboutgroup.webp" alt="group" class="img_group" />
    </figure>
  </div>
</div>
<div class="container_numbers">
  <div class="item_numbers">
    <h2>1128+</h2>
    <h4>Successful Work</h4>
  </div>
  <div class="item_numbers">
    <h2>908+</h2>
    <h4>Team member</h4>
  </div>
  <div class="item_numbers">
    <h2>258+</h2>
    <h4>Happy Customers</h4>
  </div>
  <div class="item_numbers">
    <h2>564+</h2>
    <h4>Creative Idea</h4>
  </div>
</div>

<style>
  @layer components {
    .container_all {
      display: grid;
      gap: 3rem;

      @media (width > 800px) {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    img {
      border-radius: var(--border-radius-items);
    }

    ul {
      display: grid;
      gap: 1rem;
      margin-top: 1rem;
    }
    li {
      display: grid;
      grid-template-columns: auto 1fr;
      align-items: center;
      gap: 1rem;
    }
    li:before {
      content: "";
      display: inline-block;
      width: 1.6rem;
      height: 1.6rem;
      background-color: #4eaf4e;
      -webkit-mask-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"><path fill="black" d="M176.49 95.51a12 12 0 0 1 0 17l-56 56a12 12 0 0 1-17 0l-24-24a12 12 0 1 1 17-17L112 143l47.51-47.52a12 12 0 0 1 16.98.03M236 128A108 108 0 1 1 128 20a108.12 108.12 0 0 1 108 108m-24 0a84 84 0 1 0-84 84a84.09 84.09 0 0 0 84-84"/></svg>');
      mask-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"><path fill="black" d="M176.49 95.51a12 12 0 0 1 0 17l-56 56a12 12 0 0 1-17 0l-24-24a12 12 0 1 1 17-17L112 143l47.51-47.52a12 12 0 0 1 16.98.03M236 128A108 108 0 1 1 128 20a108.12 108.12 0 0 1 108 108m-24 0a84 84 0 1 0-84 84a84.09 84.09 0 0 0 84-84"/></svg>');
    }

