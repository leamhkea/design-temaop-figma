    .container_numbers {
      display: flex;
      flex-wrap: wrap;
      margin-top: 2rem;
      justify-content: space-around;
      align-items: center;
      text-align: center;

      p,
      h4 {
        padding-block: 0;
      }
    }
  }
</style>
