---
import Layout from "../layouts/Layout.astro";
import Wrapper from "../layouts/Wrapper.astro";

import HeroAbout from "../components/HeroAbout.astro";
import OurVision from "../components/OurVision.astro";
import Corevalues from "../components/Corevalues.astro";
import Aboutteam from "../components/Aboutteam.astro";
import AccordionItem from "../components/AccordionItem.astro";
import Newsletter from "../components/Newsletter.astro";
---

<Layout>
  <Wrapper style="background-image: url('/img/heroabout.webp')">
    <HeroAbout />
  </Wrapper>

  <Wrapper theme="section_theme_white">
    <OurVision />
  </Wrapper>

  <Wrapper theme="section_theme_grey">
    <Corevalues />
  </Wrapper>

  <Wrapper theme="section_theme_white">
    <Aboutteam />
  </Wrapper>

  <Wrapper theme="section_theme_white">
    <AccordionItem />
  </Wrapper>

  <Wrapper theme="section_theme_white">
    <Newsletter />
  </Wrapper>
</Layout>

